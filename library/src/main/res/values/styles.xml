<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowCloseOnTouchOutside">false</item>

        <item name="dialogCornerRadius">@dimen/dialog_corner_radius_material</item>

        <!-- List attributes -->
        <item name="listPreferredItemHeight">56dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Subhead</item>

    </style>

</resources>
