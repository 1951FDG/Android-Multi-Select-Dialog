<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_container_height"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_item_icon"
        android:layout_width="@dimen/dialog_item_icon_size"
        android:layout_height="@dimen/dialog_item_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dialog_item_icon_left_margin"
        android:layout_marginLeft="@dimen/dialog_item_icon_left_margin"
        android:layout_marginEnd="@dimen/dialog_item_icon_right_margin"
        android:layout_marginRight="@dimen/dialog_item_icon_right_margin"
        android:background="@drawable/icon_background_material"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="@dimen/font_size_subheading"
            tools:text="TextView" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/dialog_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dialog_item_icon_right_margin"
        android:layout_marginLeft="@dimen/dialog_item_icon_right_margin"
        android:layout_marginEnd="@dimen/dialog_item_icon_left_margin"
        android:layout_marginRight="@dimen/dialog_item_icon_left_margin" />
</LinearLayout>